{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./typings"],
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types"
  },
  "include": ["src", "tests"],
  "files": ["./typings/testing-library.d.ts"]
}
